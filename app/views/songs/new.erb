</div>

<% if @song && @song.errors.any? %>
  <div>
    <strong>Some issues with your song, please fix them:</strong>
    <ul>
      <% @song.errors.full_songs.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/songs">
  <div>
    <label>Artist:</label>
    <input type="text" name="author">
  </div>
  <div>
    <label>Song:</label>
    <input type="text" name="title">
  </div>
  <div>
    <label>Url:</label>
    <input type="text" name="url">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
