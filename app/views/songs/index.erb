<div class="page-header">
  <h1>All songs <small></small></h1>
</div>

<% @songs.each do |song| %>
  <div class="song">
    <h3><a href="/songs/<%= song.id %>"><%= song.title %> </a> <small>(by: <%= song.author %>)</small></h3>
    <p>
      <%= song.url %>
    </p>
  </div>
<% end %>


<a href="/songs/new">Add a song... It's FREE (for now)!</a>


